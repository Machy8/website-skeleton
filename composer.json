{
    "name": "machy8/website-skeleton",
	"description": "Symfony/skeleton prepared for web development.",
	"type": "project",
	"license": "MIT",
	"require": {
        "php": "7.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "easycorp/easyadmin-bundle": "^2.1",
        "machy8/smart-controller": "^1.0",
        "machy8/webloader-bundle": "^1.1",
        "symfony/console": "4.2.*",
        "symfony/dotenv": "4.2.*",
        "symfony/flex": "^1.1",
        "symfony/form": "4.2.*",
        "symfony/framework-bundle": "4.2.*",
        "symfony/monolog-bundle": "^3.3",
        "symfony/orm-pack": "^1.0",
        "symfony/swiftmailer-bundle": "^3.2",
        "symfony/translation": "4.2.*",
        "symfony/twig-bundle": "4.2.*",
        "symfony/yaml": "4.2.*"
    },
	"config": {
		"preferred-install": {
			"*": "dist"
		},
		"sort-packages": true
	},
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"App\\Tests\\": "tests/"
		}
	},
	"replace": {
		"paragonie/random_compat": "2.*",
		"symfony/polyfill-ctype": "*",
		"symfony/polyfill-iconv": "*",
		"symfony/polyfill-php71": "*",
		"symfony/polyfill-php70": "*",
		"symfony/polyfill-php56": "*"
	},
	"scripts": {
		"dump-autoload": "composer dump-autoload -o --classmap-authoritative",
		"cs:check": "ecs check src tests",
		"cs:fix": "ecs check src tests --fix",
		"phpstan:check": "phpstan analyse src tests --level max",

		"auto-scripts": {
			"assets:install %PUBLIC_DIR%": "symfony-cmd"
		},
		"post-install-cmd": [
			"@auto-scripts"
		],
		"post-update-cmd": [
			"@auto-scripts"
		]
	},
	"conflict": {
		"symfony/symfony": "*"
	},
	"extra": {
		"symfony": {
			"allow-contrib": false,
			"require": "4.2.*"
		},
		"branch-alias": {
		    "dev-master": "1.0-dev"
		}
	},
	"require-dev": {
        "phpstan/phpstan-strict-rules": "^0.11.0",
        "phpstan/phpstan-symfony": "^0.11.0",
        "symfony/profiler-pack": "^1.0",
        "symplify/easy-coding-standard": "^5.4"
    }
}
