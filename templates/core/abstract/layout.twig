<!DOCTYPE html>
<html lang="{{ websiteLocale }}">
	<head>

		{% block headBegin %}{% endblock %}

		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name=“robots“ content=“index, follow“>
		<meta name="description" content="{{ siteDescription }}">
		<title>{{ siteTitle }}</title>

		{% include 'core/abstract/parts/microdata.twig' %}
		{% include 'core/abstract/parts/social-meta-tags.twig' %}

		{{ encore_entry_link_tags('layoutHeadEnd') }}
		{% block headEnd %}{% endblock %}

	</head>

	<body class="{% block bodyClasses %}{% endblock %}">

		{% block bodyBegin %}{% endblock %}

		<main style="text-align: center">
			{% block content %}{% endblock %}
		</main>

		{% include 'core/abstract/parts/footer.twig' %}

		{# {{ encore_entry_script_tags('layoutBodyEnd') }} #}
		{% block bodyEnd %}{% endblock %}

	</body>
</html>
